@model IEnumerable<ReproductorMusical.Models.Playlist>
@{
    ViewData["Title"] = "Playlist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-4">
        <h3>Listas de reproducción</h3>
    </div>
    <div class="col-3">
        <a asp-action="Crear" class="btn btn-primary form-control">Agregar Playlist</a>
    </div>

</div>

<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th>Nombre</th>
            </tr>
            @foreach (var playlist in Model)
            {
                <tr>
                    <td>@playlist.Nombre</td>
                    <td>
                        <a class="btn btn-primary text-white" asp-action="Editar" asp-route-id="@playlist.Playlist_Id">Editar</a>
                        <a class="btn btn-danger text-white" asp-action="Borrar" asp-route-id="@playlist.Playlist_Id">Borrar</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No hay listas de reproducción</p>
    }
</div>